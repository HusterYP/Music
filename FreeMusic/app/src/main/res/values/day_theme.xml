        <item name="music_play_play">@style/DayMusicPlayPlay</item><!--音乐播放界面底部播放按钮-->
        <item name="music_play_state">@style/DayMusicPlayState</item><!--音乐播放界面播放状态(循环,单曲,随机)-->
        <item name="music_play_last_play">@style/DayMusicPlayLast</item><!--音乐播放界面上一曲-->
        <item name="music_play_next_play">@style/DayMusicPlayNext</item><!--音乐播放界面下一曲-->
