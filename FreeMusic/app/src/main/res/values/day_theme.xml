        <item name="music_mine_download">@style/DayMusicMineDownLoad</item><!--我的界面-下载管理-->
        <item name="single_song_play">@style/DaySingleSongPlay</item><!--本地音乐-单曲-->
        <item name="single_song_select">@style/DaySingleSongSelect</item><!--本地音乐-单曲-->
    </style>

    <!--<item name="android:drawableStart">@mipmap/single_song_select_day</item>-->
    <style name="DaySingleSongSelect">
        <item name="android:background">@mipmap/single_song_select_day</item>
    </style>

    <style name="DaySingleSongPlay">
        <item name="android:src">@mipmap/single_song_play_day</item>
    </style>

    <style name="DayMusicMineCur">
        <item name="android:src">@mipmap/music_mine_cur_day</item>
    </style>

    <style name="DayMusicMineDownLoad">
        <item name="android:src">@mipmap/music_mine_download_day</item>
    </style>

    <style name="DayMusicMineMusic">
        <item name="android:src">@mipmap/music_mine_day</item>
    </style>

    <style name="DayMusicPlaySetUp">
        <item name="android:src">@mipmap/music_play_set_day</item>
    </style>

    <style name="DayMusicPlayMsg">
        <item name="android:src">@mipmap/music_play_msg_day</item>
    </style>

    <style name="DayMusicPlayDownload">
        <item name="android:src">@mipmap/music_play_download_day</item>
    </style>

    <style name="DayMusicPlayLike">
        <item name="android:src">@mipmap/music_play_unlike_day</item>
    </style>

