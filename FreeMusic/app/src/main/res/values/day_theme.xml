<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainColor">#FFFFFF</item> <!--界面主题色-->
        <item name="subText">#444444</item> <!--次要字体颜色-->
        <item name="thirdText">#8A8A8A</item>
        <item name="mainText">#000000</item> <!--主要字体颜色-->
        <item name="toolbarText">#FFFFFF</item><!--Toolbar字体颜色-->
        <item name="toolbar_background">#CD5555</item><!--toolbar背景色-->
        <item name="toolbar_title_color">#000000</item><!--toolbar字体颜色-->
        <item name="bt_change_state">@style/DayBtState</item>
        <item name="bt_setting">@style/DayBtSetting</item>
        <item name="tab_select">#FFFFFF</item><!--tabLayout上的字体被选中颜色-->
        <item name="tab_unselect">#DBDBDB</item><!--tabLayout上没有被选中的字体颜色-->
        <item name="swipe_refresh_pre">#CD5555</item><!--下拉刷新-->
        <item name="swipe_refresh_background">#FFFFFF</item><!--下拉刷新-->
        <item name="common_bottom_select">@style/DayBottomSelect</item><!--主界面底部公共的播放栏-->
