<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/music_play_nav_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:padding="3dp"
        android:src="@mipmap/sun" />

    <TextView
        android:id="@+id/music_play_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/music_play_nav_avatar"
        android:lines="1"
        android:textColor="?attr/mainText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/music_play_nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/music_play_nav_title"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/music_play_nav_avatar"
        android:lines="1"
        android:textColor="?attr/thirdText"
        android:textSize="12sp" />
</RelativeLayout>