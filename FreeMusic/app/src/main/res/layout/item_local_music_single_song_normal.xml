<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/single_song_trumpet"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:src="@mipmap/single_song_trumpet"
        android:visibility="gone" />

    <TextView
        android:id="@+id/single_song_song_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/single_song_trumpet"
        android:maxLines="1"
        android:textColor="?attr/mainText"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_song_song_name"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/single_song_trumpet">

        <TextView
            android:id="@+id/single_song_singer_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/single_song_right"
            android:maxLines="1"
            android:textColor="?thirdText"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/single_song_right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/single_song_right" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/single_song_set"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:src="@mipmap/music_play_set_night" />

</RelativeLayout>